{
  "scripts": {
    "postinstall": "elm package install --yes",
    "start": "yarn build:elm && parcel static/index.html",
    "clean": "rm -rf dist/",
    "build": "yarn build:elm && yarn build:html",
    "build:elm": "elm make src/Main.elm --yes --output dist/main.js",
    "build:html": "NODE_ENV=production parcel build static/index.html"
  },
  "devDependencies": {
    "ace-css": "^1.1.0",
    "elm": "0.18.0",
    "font-awesome": "^4.7.0",
    "parcel-bundler": "^1.11.0",
    "parcel-plugin-bundle-deep-hash": "^1.0.2"
  }
}
